@model Proyecto.Models.Ausencia

@{
    ViewBag.Title = "Eliminar Ausencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Eliminar Ausencia</h2>

    <div class="alert alert-warning">
        <h5 class="mb-3">¿Está seguro que desea eliminar esta ausencia?</h5>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Detalle de la Ausencia</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Empleado.NumeroDocumento):</strong>
                    <p>@Html.DisplayFor(model => model.Empleado.NumeroDocumento)</p>
                </div>
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.TipoAusencia):</strong>
                    <p>@Html.DisplayFor(model => model.TipoAusencia)</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.FechaInicio):</strong>
                    <p>@Html.DisplayFor(model => model.FechaInicio)</p>
                </div>
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.FechaFin):</strong>
                    <p>@Html.DisplayFor(model => model.FechaFin)</p>
                </div>
            </div>

            <div class="mb-3">
                <strong>@Html.DisplayNameFor(model => model.Justificacion):</strong>
                <p>@Html.DisplayFor(model => model.Justificacion)</p>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mt-4">
                    <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
