@model Proyecto.Models.Ausencia

@{
    ViewBag.Title = "Crear Ausencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 aos-init" data-aos="fade-up">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-calendar-minus me-2"></i> Registrar Ausencia</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row g-4">
                    <!-- Empleado -->
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.IdEmpleado, "Empleado", htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.DropDownList("IdEmpleado", null, htmlAttributes: new { @class = "form-select" })
                        </div>
                        @Html.ValidationMessageFor(model => model.IdEmpleado, "", new { @class = "text-danger" })
                    </div>

                    <!-- Tipo de Ausencia -->
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.TipoAusencia, htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-list-alt"></i></span>
                            @Html.EditorFor(model => model.TipoAusencia, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.TipoAusencia, "", new { @class = "text-danger" })
                    </div>

                    <!-- Fecha Inicio -->
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                            @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                    </div>

                    <!-- Fecha Fin -->
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.FechaFin, htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-check"></i></span>
                            @Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                    </div>

                    <!-- Justificación -->
                    <div class="col-12">
                        @Html.LabelFor(model => model.Justificacion, htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                            @Html.TextAreaFor(model => model.Justificacion, 4, 50, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Justificacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Botones -->
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <input type="submit" value="Guardar" class="btn btn-success shadow-sm px-4" />
                    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary shadow-sm px-4" })
                </div>
            }
        </div>
    </div>
</div>
