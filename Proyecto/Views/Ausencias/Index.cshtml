@model IEnumerable<Proyecto.Models.Ausencia>
@{
    ViewBag.Title = "Listado de Ausencias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-calendar-minus"></i> Ausencias</h6>
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary"><i class="fas fa-plus-circle me-1"></i> Nueva Ausencia</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Empleado.NumeroDocumento)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaInicio)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaFin)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TipoAusencia)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Justificacion)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Empleado.NumeroDocumento</td>
                                <td>@item.FechaInicio.ToShortDateString()</td>
                                <td>@item.FechaFin.ToShortDateString()</td>
                                <td>@item.TipoAusencia</td>
                                <td>@item.Justificacion</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info text-white"><i class="fas fa-eye"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
