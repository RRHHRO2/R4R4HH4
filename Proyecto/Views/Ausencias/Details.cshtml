@model Proyecto.Models.Ausencia

@{
    ViewBag.Title = "Detalles de Ausencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Detalles de Ausencia</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Información de la Ausencia</h5>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Empleado.NumeroDocumento)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Empleado.NumeroDocumento)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaInicio)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaInicio)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaFin)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaFin)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TipoAusencia)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoAusencia)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Justificacion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Justificacion)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2" })
        @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
