@model IEnumerable<Proyecto.Models.Contrato>

@{
    ViewBag.Title = "Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de Contratos</h2>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Empleado.TipoDocumento.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Empleado.NumeroDocumento)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Empleado.Nombres)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Empleado.Apellidos)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TipoContrato.NombreTipo)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaInicio)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaFin)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.TipoDocumento.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.NumeroDocumento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Nombres)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoContrato.NombreTipo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
