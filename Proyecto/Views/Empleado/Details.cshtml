@model Proyecto.Models.Empleado

@{
    ViewBag.Title = "Detalles del Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Detalles del Empleado</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">@Model.Nombres @Model.Apellidos</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Tipo de Documento</dt>
            <dd class="col-sm-8">@Model.TipoDocumento.Nombre</dd>

            <dt class="col-sm-4">Número de Documento</dt>
            <dd class="col-sm-8">@Model.NumeroDocumento</dd>

            <dt class="col-sm-4">Fecha de Expedición</dt>
            <dd class="col-sm-8">@Model.FechaExpedicion.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Lugar de Expedición</dt>
            <dd class="col-sm-8">@Model.MunicipioExpedicionDoc.Nombre</dd>

            <dt class="col-sm-4">Nombres</dt>
            <dd class="col-sm-8">@Model.Nombres</dd>

            <dt class="col-sm-4">Apellidos</dt>
            <dd class="col-sm-8">@Model.Apellidos</dd>

            <dt class="col-sm-4">Dirección</dt>
            <dd class="col-sm-8">@Model.Direccion</dd>

            <dt class="col-sm-4">Barrio</dt>
            <dd class="col-sm-8">@Model.Barrio</dd>

            <dt class="col-sm-4">Teléfono</dt>
            <dd class="col-sm-8">@Model.Telefono</dd>

            <dt class="col-sm-4">Celular</dt>
            <dd class="col-sm-8">@Model.Celular</dd>

            <dt class="col-sm-4">Correo Electrónico</dt>
            <dd class="col-sm-8">@Model.Correo</dd>

            <dt class="col-sm-4">Área de Trabajo</dt>
            <dd class="col-sm-8">@Model.AreaTrabajo.NombreArea</dd>

            <dt class="col-sm-4">Lugar de Nacimiento</dt>
            <dd class="col-sm-8">@Model.MunicipioNacimiento.Nombre</dd>

            <dt class="col-sm-4">Fondo de Cesantias</dt>
            <dd class="col-sm-8">@Model.SSAFC.Nombre</dd>

            <dt class="col-sm-4">Fondo de Pensiones (AFP)</dt>
            <dd class="col-sm-8">@Model.SSAFP.Nombre</dd>

            <dt class="col-sm-4">EPS</dt>
            <dd class="col-sm-8">@Model.SSEPS.Nombre</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdEmpleado }, new { @class = "btn btn-warning me-2" })
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
</div>
