@model Proyecto.Models.Empleado

@{
    ViewBag.Title = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>Registrar Empleado</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row g-4">
                    <!-- Documento -->
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.IdTipoDocumento, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            @Html.DropDownList("IdTipoDocumento", null, htmlAttributes: new { @class = "form-select" })
                        </div>
                        @Html.ValidationMessageFor(m => m.IdTipoDocumento, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.NumeroDocumento, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                            @Html.EditorFor(m => m.NumeroDocumento, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.NumeroDocumento, "", new { @class = "text-danger" })
                    </div>

                    <!-- Fechas y Municipios -->
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.FechaExpedicion, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            @Html.EditorFor(m => m.FechaExpedicion, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.FechaExpedicion, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.MunicipioExpedicion, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            @Html.DropDownList("MunicipioExpedicion", null, htmlAttributes: new { @class = "form-select" })
                        </div>
                        @Html.ValidationMessageFor(m => m.MunicipioExpedicion, "", new { @class = "text-danger" })
                    </div>

                    <!-- Nombres y Apellidos -->
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Nombres, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            @Html.EditorFor(m => m.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.Nombres, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Apellidos, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            @Html.EditorFor(m => m.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.Apellidos, "", new { @class = "text-danger" })
                    </div>

                    <!-- Dirección y contacto -->
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Direccion, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-home"></i></span>
                            @Html.EditorFor(m => m.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Correo, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            @Html.EditorFor(m => m.Correo, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
                    </div>

                    <!-- Teléfonos -->
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Telefono, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            @Html.EditorFor(m => m.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Celular, new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                            @Html.EditorFor(m => m.Celular, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.Celular, "", new { @class = "text-danger" })
                    </div>

                    <!-- Seguridad Social -->
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.EPS, new { @class = "form-label fw-bold" })
                        @Html.DropDownList("EPS", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.EPS, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.FondoPension, new { @class = "form-label fw-bold" })
                        @Html.DropDownList("FondoPension", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.FondoPension, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.FondoCesantias, new { @class = "form-label fw-bold" })
                        @Html.DropDownList("FondoCesantias", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.FondoCesantias, "", new { @class = "text-danger" })
                    </div>

                    <!-- Área de trabajo -->
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.IdAreaTrabajo, new { @class = "form-label fw-bold" })
                        @Html.DropDownList("IdAreaTrabajo", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.IdAreaTrabajo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <input type="submit" value="Guardar" class="btn btn-success shadow-sm">
                    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary shadow-sm" })
                </div>
            }
        </div>
    </div>
</div>
