@model IEnumerable<Proyecto.Models.Empleado>

@{
    ViewBag.Title = "Listado de Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Listado de Empleados</h2>

    <p>
        @Html.ActionLink("Crear Nuevo Empleado", "Create", null, new { @class = "btn btn-primary mb-3" })
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>

                    <th>Tipo de Documento</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroDocumento)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(modelItem => item.TipoDocumento.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.NumeroDocumento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>

                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.IdEmpleado }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.IdEmpleado }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEmpleado }, new { @class = "btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
