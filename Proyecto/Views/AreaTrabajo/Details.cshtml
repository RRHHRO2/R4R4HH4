@model Proyecto.Models.AreaTrabajo

@{
    ViewBag.Title = "Detalles del Área";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Detalles del Área de Trabajo</h4>
            <a href="@Url.Action("Index")" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre del Área</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreArea)</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a href="@Url.Action("Edit", new { id = Model.IdArea })" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </div>
</div>
