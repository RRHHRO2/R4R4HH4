@model IEnumerable<Proyecto.Models.AreaTrabajo>

@{
    ViewBag.Title = "Áreas de Trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Áreas de Trabajo</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Nueva Área
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NombreArea)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreArea)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = item.IdArea })" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a href="@Url.Action("Details", new { id = item.IdArea })" class="btn btn-sm btn-info me-1 text-white">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.IdArea })" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
