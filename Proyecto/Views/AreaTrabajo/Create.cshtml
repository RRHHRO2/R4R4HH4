@model Proyecto.Models.AreaTrabajo

@{
    ViewBag.Title = "Crear Área de Trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- AOS Animation Library -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ once: true });
</script>

<div class="container mt-5" data-aos="fade-zoom-in" data-aos-easing="ease-in-back" data-aos-delay="200" data-aos-offset="0">
    <div class="card border-0 shadow-lg rounded-5 overflow-hidden">
        <div class="card-header text-white py-4 px-5" style="background: linear-gradient(to right, #198754, #157347);">
            <h3 class="fw-semibold mb-0">
                <i class="bi bi-plus-circle me-2"></i> Crear Nueva Área de Trabajo
            </h3>
        </div>
        <div class="card-body bg-white px-5 py-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger fade show mb-4" })

                <div class="mb-4" data-aos="fade-right" data-aos-delay="100">
                    <label class="form-label fw-semibold text-muted">Nombre del Área</label>
                    <div class="input-group input-group-lg shadow-sm">
                        <span class="input-group-text bg-light"><i class="bi bi-building"></i></span>
                        @Html.TextBoxFor(model => model.NombreArea, new { @class = "form-control", placeholder = "Ej. Recursos Humanos" })
                    </div>
                    @Html.ValidationMessageFor(model => model.NombreArea, "", new { @class = "text-danger small ms-1" })
                </div>

                <div class="mb-4" data-aos="fade-left" data-aos-delay="200">
                    <label class="form-label fw-semibold text-muted">Descripción</label>
                    @Html.TextAreaFor(model => model.Descripcion, new
                    {
                        @class = "form-control form-control-lg shadow-sm",
                        rows = 4,
                        placeholder = "Describe brevemente el propósito del área"
                    })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small ms-1" })
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4" data-aos="fade-up" data-aos-delay="300">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success btn-lg rounded-pill px-4">
                        <i class="bi bi-check-circle me-1"></i> Crear
                    </button>
                </div>
            }
        </div>
    </div>
</div>
