@model IEnumerable<Proyecto.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" data-aos="fade-up" data-aos-duration="800">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold"><i class="fas fa-users-cog me-2"></i>Lista de Usuarios</h5>
            <a href="@Url.Action("Create")" class="btn btn-light btn-sm shadow-sm rounded-pill px-3" data-bs-toggle="tooltip" title="Crear nuevo usuario">
                <i class="fas fa-user-plus me-1"></i> Nuevo
            </a>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle shadow-sm rounded">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Área de Trabajo</th>
                            <th>Rol</th>
                            <th>Cédula</th>
                            <th>Nombre Completo</th>
                            <th>Correo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td>@item.AreaTrabajo.NombreArea</td>
                                <td>@item.Rol.NombreRol</td>
                                <td>@item.Cedula</td>
                                <td>@item.NombreCompleto</td>
                                <td>@item.Correo</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-warning btn-sm rounded-pill mx-1" data-bs-toggle="tooltip" title="Editar">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-info btn-sm text-white rounded-pill mx-1" data-bs-toggle="tooltip" title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger btn-sm rounded-pill mx-1" data-bs-toggle="tooltip" title="Eliminar" onclick="return confirm('¿Está seguro que desea eliminar este usuario?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar tooltips Bootstrap
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
