@model IEnumerable<Proyecto.Models.Usuario>

@{
    ViewBag.Title = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Usuarios</h2>
        @Html.ActionLink("Crear Nuevo Usuario", "Create", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Cedula)</th>
                <th>@Html.DisplayNameFor(model => model.First().NombreCompleto)</th>
                <th>@Html.DisplayNameFor(model => model.First().Correo)</th>
                <th>@Html.DisplayNameFor(model => model.First().AreaTrabajo.NombreArea)</th>
                <th>@Html.DisplayNameFor(model => model.First().Rol.NombreRol)</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.AreaTrabajo.NombreArea)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rol.NombreRol)</td>
                    <td class="text-end">
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm me-1" })
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm me-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" }) <!-- SIN confirm() -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
