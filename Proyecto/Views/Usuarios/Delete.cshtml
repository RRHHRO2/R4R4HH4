@model Proyecto.Models.Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Eliminar Usuario</h4>
        </div>
        <div class="card-body">
            <p class="alert alert-warning">
                ¿Estás seguro que deseas eliminar este usuario? Esta acción no se puede deshacer.
            </p>

            <dl class="row">
                <dt class="col-sm-4">Área de Trabajo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AreaTrabajo.NombreArea)</dd>

                <dt class="col-sm-4">Rol</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Rol.NombreRol)</dd>

                <dt class="col-sm-4">Cédula</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cedula)</dd>

                <dt class="col-sm-4">Nombre Completo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

                <dt class="col-sm-4">Correo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill me-1"></i> Eliminar
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                    </a>
                </div>
            }
        </div>
    </div>
</div>
