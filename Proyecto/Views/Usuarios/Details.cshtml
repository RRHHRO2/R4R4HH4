@model Proyecto.Models.Usuario

@{
    ViewBag.Title = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Detalles del Usuario</h4>
            <a href="@Url.Action("Index")" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver
            </a>
        </div>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Área de Trabajo</strong><br />
                    <span class="badge bg-primary">@Model.AreaTrabajo.NombreArea</span>
                </div>
                <div class="col-md-6">
                    <strong>Rol</strong><br />
                    <span class="badge bg-secondary">@Model.Rol.NombreRol</span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Cédula</strong>
                    @Model.Cedula
                </div>
                <div class="col-md-4">
                    <strong>Nombre Completo</strong><br />
                    @Model.NombreCompleto
                </div>
                <div class="col-md-4">
                    <strong>Correo</strong><br />
                    @Model.Correo
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Contraseña</strong><br />
                    @Model.Contrasena
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
        </div>
    </div>
</div>
