@model IEnumerable<Proyecto.Models.TipoDocumento>

@{
    ViewBag.Title = "Listado de Tipos de Documento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Abreviatura)</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Abreviatura)</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdTipoDocumento }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdTipoDocumento }, new { @class = "btn btn-sm btn-info me-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdTipoDocumento }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
